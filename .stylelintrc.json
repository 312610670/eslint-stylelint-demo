{
    "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
    "plugins": ["stylelint-order"],
    "rules": {
        "indentation": 4,
        "number-leading-zero": null,
        "color-no-hex": true,
        "order/order": [
            "custom-properties",
            "declarations"
        ],
        "order/properties-order": [
            "width",
            "height"
        ]
    }
}